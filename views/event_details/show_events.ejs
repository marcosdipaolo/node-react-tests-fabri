<div class="shows-events-schedule">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Event Listing</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <% if ( details.length > 0 ){ %> 
                <ul>
                    <% details.map( e =>{ %>
                    <li>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="title">
                                    <h4><%= e.title %></h4>
                                    <span><%= e.tickets %> Tickets Available</span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="time"><span><i class="fa fa-clock-o"></i> <%= e.date %><br><%= e.hour %></span></div>
                            </div>
                            <div class="col-lg-3">
                                <div class="place"><span><i class="fa fa-map-marker"></i><%= e.city %>, <br><%= e.place %></span></div>
                            </div>
                            <div class="col-lg-3">
                                <div class="main-dark-button">
                                    <a href="/ticket-details">Purchase Tickets</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% }) %>
                </ul>
                <% }else { %>
                    <h1 class="d-flex justify-content-center p-3">No events to display</h1>
                    <% } %>
            </div>
            <div class="col-lg-12">
                <div class="pagination">
                    <ul>
                        <li><a href="#">Prev</a></li>
                        <li><a href="#">1</a></li>
                        <li class="active"><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>