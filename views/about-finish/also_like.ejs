<% if ( events.length > 0 ){ %> 
    <div class="also-like">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>You Might Also Like...</h2>
                </div>
                <% events.map( e =>{ %>
                    <div class="col-lg-4">
                        <div class="like-item">
                            <div class="thumb">
                                <a href="/event-details"><img src='<%= e.img %>' alt=""></a>
                                <div class="icons">
                                    <ul>
                                        <li><a href="/event-details"><i class="fa fa-arrow-right"></i></a></li>
                                        <li><a href="/ticket-details"><i class="fa fa-ticket"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="down-content">
                                <span><%= e.upcomming %></span>
                                <a href="/event-details"><h4><%= e.title %></h4></a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
<% }else { %>
<h1 class="d-flex justify-content-center p-3">No events to display</h1>
<% } %>